<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_card_surface"
    android:padding="12dp">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/graph_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/dashboard_on_surface"
        android:text="@string/dashboard_graph_placeholder"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:visibility="gone" />

    <TextView
        android:id="@+id/graph_updated_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:padding="8dp"
        android:textColor="@color/dashboard_on_surface"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

    <Button
        android:id="@+id/graph_range_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:text="6h"
        android:textColor="@color/dashboard_on_surface"
        android:textSize="12sp"
        style="?attr/borderlessButtonStyle" />

</FrameLayout>
