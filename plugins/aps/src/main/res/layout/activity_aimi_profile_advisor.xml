<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AIMI Profile Advisor"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Score Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score de Profil"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <TextView
                    android:id="@+id/aimi_advisor_score_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--/10"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
                
                <TextView
                    android:id="@+id/aimi_advisor_summary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calcul en cours..."
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Recommendations Rules Engine -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analyse Rapide"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">
            
            <TextView
                android:id="@+id/aimi_advisor_recommendation_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Aucune donnée."/>
        </androidx.cardview.widget.CardView>

        <!-- AI Coach Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coach IA Expert"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/aimi_advisor_fetch_ai_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Demander une analyse approfondie"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="#FFFFFF"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">
            
            <TextView
                android:id="@+id/aimi_advisor_ai_advice_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Cliquez ci-dessus pour obtenir des conseils personnalisés basés sur vos 7 derniers jours."
                android:textIsSelectable="true"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
