<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AIMI Health Connect"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AIMI needs access to Health Connect to read your steps, sleep and heart rate data."
        android:textColor="#666666"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Checking..."
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_marginBottom="24dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_request_perms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grant Access"
        android:backgroundTint="#007AFF"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btn_open_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Health Connect App"
        android:backgroundTint="#E0E0E0"
        android:textColor="#000000"/>

</LinearLayout>
