name: AAPS Jason CI - All Variants

on:
  push:
    branches:
      - dev_OAPSAIMI
    tags:
      - 'v*.*.*'
  pull_request:
    branches:
      - dev_OAPSAIMI
  workflow_dispatch: # Allows manual trigger

jobs:
  build:
    name: Build All AAPS Variants
    runs-on: ubuntu-latest
    steps:
      - name: Checkout source code
        uses: actions/checkout@v4

      - name: Decode Secrets Keystore Set and Oauth2 to Env
        run: |
          if [ -n "${{ secrets.KEYSTORE_SET }}" ]; then
            DECODED=$(echo "${{ secrets.KEYSTORE_SET }}" | base64 -d)
            KEYSTORE_BASE64=$(echo "$DECODED" | cut -d'|' -f1)
            KEYSTORE_PASSWORD=$(echo "$DECODED" | cut -d'|' -f2)
            KEY_ALIAS=$(echo "$DECODED" | cut -d'|' -f3)
            KEY_PASSWORD=$(echo "$DECODED" | cut -d'|' -f4)
            echo "KEYSTORE_BASE64=$KEYSTORE_BASE64" >> $GITHUB_ENV
            echo "KEYSTORE_PASSWORD=$KEYSTORE_PASSWORD" >> $GITHUB_ENV
            echo "KEY_ALIAS=$KEY_ALIAS" >> $GITHUB_ENV
            echo "KEY_PASSWORD=$KEY_PASSWORD" >> $GITHUB_ENV
            echo "::add-mask::$KEYSTORE_BASE64"
            echo "::add-mask::$KEYSTORE_PASSWORD"
            echo "::add-mask::$KEY_ALIAS"
            echo "::add-mask::$KEY_PASSWORD"
          fi
          echo "GDRIVE_OAUTH2=${{ secrets.GDRIVE_OAUTH2 }}" >> $GITHUB_ENV

      - name: Decode keystore file
        run: |
          mkdir -p "$RUNNER_TEMP/keystore"
          echo "$KEYSTORE_BASE64" | base64 -d > "$RUNNER_TEMP/keystore/keystore.jks"

      - name: Decode GDrive OAuth2 secrets
        run: |
          DECODED=$(echo "${{ secrets.GDRIVE_OAUTH2 }}" | base64 -d)
          echo "GDRIVE_CLIENT_ID=$(echo "$DECODED" | cut -d'|' -f1)" >> $GITHUB_ENV
          echo "GDRIVE_REFRESH_TOKEN=$(echo "$DECODED" | cut -d'|' -f2)" >> $GITHUB_ENV

      - name: Retrieving Google Drive access token
        run: |
          TOKEN_RESPONSE=$(curl -s -X POST https://oauth2.googleapis.com/token \
            -d client_id="$GDRIVE_CLIENT_ID" \
            -d refresh_token="$GDRIVE_REFRESH_TOKEN" \
            -d grant_type=refresh_token)
          ACCESS_TOKEN=$(echo "$TOKEN_RESPONSE" | jq -r .access_token)
          echo "ACCESS_TOKEN=$ACCESS_TOKEN" >> $GITHUB_ENV
          echo "::add-mask::$ACCESS_TOKEN"

      - name: Extract VERSION
        run: |
          VERSION=$(grep 'val appVersion' buildSrc/src/main/kotlin/Versions.kt | awk -F '"' '{print $2}')
          echo "VERSION=$VERSION" >> $GITHUB_ENV

      - name: Set up JDK
        uses: actions/setup-java@v4
        with:
          java-version: 21
          distribution: 'temurin'
          cache: gradle

      - name: Build All APKs
        run: |
          chmod +x gradlew
          ./gradlew :app:assemble :wear:assemble \
          -Dorg.gradle.jvmargs="-Xmx8g -XX:+UseParallelGC -Xss1024m" \
          -Pandroid.injected.signing.store.file="$RUNNER_TEMP/keystore/keystore.jks" \
          -Pandroid.injected.signing.store.password="$KEYSTORE_PASSWORD" \
          -Pandroid.injected.signing.key.alias="$KEY_ALIAS" \
          -Pandroid.injected.signing.key.password="$KEY_PASSWORD"

      - name: Prepare APKs for Upload
        run: |
          mkdir -p output_apks
          # Find all APKs, but exclude intermediate/unaligned ones to save space
          find . -name "*.apk" ! -name "*unaligned*" ! -name "*unsigned*" -exec cp {} output_apks/ \;
          ls -R output_apks/

      - name: Upload APKs to Google Drive
        run: |
          set -e
          
          # 1. Ensure AAPS root folder exists
          AAPS_FOLDER_ID=$(curl -s -X GET -H "Authorization: Bearer $ACCESS_TOKEN" "https://www.googleapis.com/drive/v3/files?q=name='AAPS'+and+mimeType='application/vnd.google-apps.folder'+and+trashed=false" | jq -r '.files[0].id')
          if [ "$AAPS_FOLDER_ID" == "null" ]; then
            AAPS_FOLDER_ID=$(curl -s -X POST -H "Authorization: Bearer $ACCESS_TOKEN" -H "Content-Type: application/json" -d '{"name": "AAPS", "mimeType": "application/vnd.google-apps.folder"}' "https://www.googleapis.com/drive/v3/files" | jq -r '.id')
          fi

          # 2. Ensure Version folder exists
          VERSION_FOLDER_ID=$(curl -s -X GET -H "Authorization: Bearer $ACCESS_TOKEN" "https://www.googleapis.com/drive/v3/files?q=name='${VERSION}'+and+mimeType='application/vnd.google-apps.folder'+and+'$AAPS_FOLDER_ID'+in+parents+and+trashed=false" | jq -r '.files[0].id')
          if [ "$VERSION_FOLDER_ID" == "null" ]; then
            VERSION_FOLDER_ID=$(curl -s -X POST -H "Authorization: Bearer $ACCESS_TOKEN" -H "Content-Type: application/json" -d "{\"name\": \"${VERSION}\", \"mimeType\": \"application/vnd.google-apps.folder\", \"parents\": [\"$AAPS_FOLDER_ID\"]}" "https://www.googleapis.com/drive/v3/files" | jq -r '.id')
          fi

          # 3. Upload Function
          upload_to_gdrive() {
            FILE_PATH=$1
            FILE_NAME=$2
            echo "‚¨ÜÔ∏è Uploading $FILE_NAME..."
            curl -s -X POST -H "Authorization: Bearer $ACCESS_TOKEN" \
              -F "metadata={name:'$FILE_NAME', parents:['$VERSION_FOLDER_ID']};type=application/json;charset=UTF-8" \
              -F "file=@$FILE_PATH;type=application/vnd.android.package-archive" \
              "https://www.googleapis.com/upload/drive/v3/files?uploadType=multipart"
          }

          # 4. Loop through all gathered APKs
          for apk in output_apks/*.apk; do
            upload_to_gdrive "$apk" "$(basename "$apk")"
          done
          
          echo "üéâ All variants uploaded successfully!"
